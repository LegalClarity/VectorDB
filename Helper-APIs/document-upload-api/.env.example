# Google Cloud Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_PROJECT_ID=your_google_cloud_project_id
GOOGLE_REGION=asia-south1
USER_DOC_BUCKET=your_user_documents_bucket_name

# Google Cloud Storage Service Account (optional - uses ADC if not provided)
# GCS_SERVICE_ACCOUNT_PATH=/path/to/your/service-account.json

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGO_DB=LegalClarity
MONGO_USERS_COLLECTION=users
MONGO_DOCS_COLLECTION=documents

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes

# Security Configuration (for production)
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
